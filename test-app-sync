apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: test-app
  namespace: openshift-gitops
spec:
  destination:
    namespace: test-gitops
    server: https://kubernetes.default.svc
  project: default
  source:
    path: app
    repoURL: https://github.com/jyotsanaholmes/openshift-gitops-getting-started/
    targetRevision: HEAD
  syncPolicy:
    automated: {}
